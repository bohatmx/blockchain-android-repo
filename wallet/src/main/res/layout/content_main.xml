<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        app:cardElevation="8dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtTitle"
                android:text="OneConnect Wallet"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/grey_500"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_below="@id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/label"
                    android:text="Balance:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey_300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtBalance"
                    android:text="10,000,000.00"
                    android:layout_toRightOf="@id/label"
                    android:textSize="24sp"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:textColor="@color/teal_200"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:id="@+id/txtDate"
                android:text="31 December 2099 10:38"
                android:textSize="18sp"
                android:textColor="@color/pink_200"
                android:layout_below="@id/layout1"
                android:layout_marginTop="@dimen/fab_margin"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_below="@id/card1"
        app:cardElevation="4dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_attach_money"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtLastTitle"
                android:text="Last Transaction"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtType"
                android:text="May be a Payment"
                android:layout_below="@id/txtLastTitle"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_below="@id/txtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/label2"
                    android:text="Amount:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtLastAmount"
                    android:text="600,000.00"
                    android:layout_toRightOf="@id/label2"
                    android:textSize="20sp"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:textColor="@color/teal_200"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:id="@+id/txtLastDate"
                android:text="31 December 2099 10:43"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_below="@id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>