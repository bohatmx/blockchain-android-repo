<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AftaRobotTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/blue_gray_500</item>
        <item name="colorPrimaryDark">@color/teal_800</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="BeaconTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/green_700</item>
    </style>

    <style name="MarshalTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/cyan_700</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="colorAccent">@color/pink_800</item>
    </style>

    <style name="OwnerTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/orange_600</item>
        <item name="colorPrimaryDark">@color/orange_800</item>
        <item name="colorAccent">@color/teal_600</item>
    </style>

    <style name="RouteBuilderTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/grey_500</item>
        <item name="colorPrimaryDark">@color/grey_700</item>
        <item name="colorAccent">@color/blue_500</item>
    </style>


    <style name="DriverTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorAccent">@color/blue_800</item>
    </style>


    <style name="PatrollerTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/indigo_300</item>
        <item name="colorPrimaryDark">@color/indigo_500</item>
        <item name="colorAccent">@color/orange_600</item>
    </style>

    <style name="AssocBuilderTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/amber_500</item>
    </style>


    <style name="AdminTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryDark">@color/brown_700</item>
        <item name="colorAccent">@color/teal_400</item>
    </style>

    <style name="CommuterTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/teal_400</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/pink_700</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BigBlueText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumRedText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red_600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
