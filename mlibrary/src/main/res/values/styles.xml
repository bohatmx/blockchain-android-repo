<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorAccent">@color/teal_500</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AftaRobotTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_900</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="BeaconTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/purple_300</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/green_500</item>
    </style>

    <style name="MarshalTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/cyan_700</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="colorAccent">@color/pink_700</item>
    </style>

    <style name="OwnerTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="colorAccent">@color/red_600</item>
    </style>

    <style name="RouteBuilderTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/pink_700</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
        <item name="colorAccent">@color/blue_500</item>
    </style>


    <style name="DriverTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorAccent">@color/blue_800</item>
    </style>


    <style name="PatrollerTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorAccent">@color/red_800</item>
    </style>

    <style name="AssocBuilderTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/amber_500</item>
    </style>


    <style name="AdminTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/indigo_400</item>
        <item name="colorPrimaryDark">@color/indigo_800</item>
        <item name="colorAccent">@color/red_700</item>
    </style>

    <style name="CommuterTheme" parent="AftaRobotTheme">
        <item name="colorPrimary">@color/teal_400</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/pink_700</item>
    </style>


</resources>
